@model PROG6212_Part2.Models.User

@{
    ViewData["Title"] = "Create Teacher";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm" style="background-color:#265D44; border:none;">
                <div class="card-body">

                    <h2 class="mb-4 text-white">Add New Teacher</h2>

                    <form asp-action="CreateTeacher" asp-controller="HR" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label text-white">Full Name</label>
                            <input asp-for="FullName"
                                   class="form-control"
                                   style="background-color:#2D6A4F; color:white; border:none;" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-white">Email</label>
                            <input asp-for="Email" type="email"
                                   class="form-control"
                                   style="background-color:#2D6A4F; color:white; border:none;" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-white">Password</label>
                            <input asp-for="Password" type="password"
                                   class="form-control"
                                   style="background-color:#2D6A4F; color:white; border:none;" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HourlyRate" class="form-label text-white">Hourly Rate</label>
                            <input asp-for="HourlyRate" type="number" step="0.01"
                                   class="form-control"
                                   style="background-color:#2D6A4F; color:white; border:none;" />
                            <span asp-validation-for="HourlyRate" class="text-danger"></span>
                        </div>

                        <div class="d-flex mt-4">
                            <button type="submit"
                                    class="btn"
                                    style="background-color:#1B4F3B; color:white;">
                                Create Teacher
                            </button>

                            <a asp-action="TeacherList" asp-controller="HR"
                               class="btn ms-3"
                               style="background-color:#1F5038; color:white;">
                                Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
