@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROG6212_Part2</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG6212_Part2.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100" style="background-color: #1b4332;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
            <a class="navbar-brand fw-bold text-uppercase" asp-controller="Home" asp-action="Index">
                CMCS System
            </a>

            <div class="d-flex">
                @if (string.IsNullOrEmpty(userRole))
                {
                    <a class="btn btn-outline-light ms-3" asp-controller="Home" asp-action="Login">Login</a>
                }
                else
                {
                    <span class="text-white me-3">Logged in as: @userRole</span>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Logout">Logout</a>
                }
            </div>
        </nav>

    </header>
    <div class="flex-grow-1 d-flex">
        <nav id="sidebarMenu" class="sidebar p-3">
            <ul class="nav flex-column">

                <li class="nav-item mb-2">
                    <a class="nav-link fw-bold @(ViewData["Title"]?.ToString() == "Dashboard" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        Dashboard
                    </a>
                </li>

                @if (string.IsNullOrEmpty(userRole))
                {
                    <li class="nav-item mt-3 text-white-50">
                        <p>Login to access your dashboard.</p>
                    </li>
                }
                else
                {
                   
                    @if (userRole == "Teacher" || userRole == "HR")
                    {
                        <li class="nav-item mb-2">
                            <a class="nav-link fw-bold d-flex justify-content-between align-items-center"
                               data-bs-toggle="collapse"
                               href="#teacherMenu"
                               role="button"
                               aria-expanded="false"
                               aria-controls="teacherMenu">
                                Teacher
                                <span class="ms-2">&#9662;</span>
                            </a>
                            <div class="collapse ps-3" id="teacherMenu">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link small @(ViewData["Title"]?.ToString() == "Submit Claim" ? "active" : "")"
                                           asp-controller="Teacher" asp-action="submitClaim">
                                            Submit Claim
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link small @(ViewData["Title"]?.ToString() == "View Claims" ? "active" : "")"
                                           asp-controller="Teacher" asp-action="viewClaims">
                                            View All Teacher Claims
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }

                    @if (userRole == "PC" || userRole == "HR")
                    {
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Programme Coordinator" ? "active" : "")"
                               asp-controller="PC" asp-action="PendingClaims">
                                Programme Coordinator
                            </a>
                        </li>
                    }

                    @if (userRole == "AM" || userRole == "HR")
                    {
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Academic Manager" ? "active" : "")"
                               asp-controller="AM" asp-action="verifiedClaims">
                                Academic Manager
                            </a>
                        </li>
                    }


                    @if (userRole == "HR")
                    {
                        <li class="nav-item mb-2">
                            <a class="nav-link fw-bold d-flex justify-content-between align-items-center"
                               data-bs-toggle="collapse"
                               href="#hrMenu"
                               role="button"
                               aria-expanded="false"
                               aria-controls="hrMenu">
                                Human Resources
                                <span class="ms-2">&#9662;</span>
                            </a>

                            <div class="collapse ps-3" id="hrMenu">
                                <ul class="nav flex-column">

                                    <li class="nav-item">
                                        <a class="nav-link small @(ViewData["Title"]?.ToString() == "HR Dashboard" ? "active" : "")"
                                           asp-controller="HR" asp-action="HRIndex">
                                            HR Dashboard
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link small @(ViewData["Title"]?.ToString() == "Teacher List" ? "active" : "")"
                                           asp-controller="HR" asp-action="TeacherList">
                                            Manage Teachers
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link small @(ViewData["Title"]?.ToString() == "Create Teacher" ? "active" : "")"
                                           asp-controller="HR" asp-action="CreateTeacher">
                                            Add Teacher
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }

                }
            </ul>

        </nav>
        <main class="flex-grow-1 p-4">

           
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>
    <footer class="footer py-3 bg-dark text-white text-center fw-bold text-uppercase">
        <div class="container">
            &copy; 2025 - CMCS
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
