@model PROG6212_Part2.Models.Claim

@{
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm" style="background-color: #265D44; border: none;">
                <div class="card-body">
                    <h3 class="card-title mb-3" style="color: white;">Submit Monthly Claim</h3>
                    <p class="small" style="color: white;">
                        Fill in the details below and upload any supporting documents. Total will be calculated automatically.
                    </p>

                    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div class="row g-3">

                            <div class="col-12">
                                <label asp-for="FullName" class="form-label" style="color: white;"></label>
                                <input asp-for="FullName" class="form-control"
                                       style="background-color: #2D6A4F; color: white; border: none;" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Subject" class="form-label" style="color: white;"></label>
                                <input asp-for="Subject" class="form-control"
                                       placeholder="Enter subject taught"
                                       style="background-color: #2D6A4F; color: white; border: none;" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Email" class="form-label" style="color: white;"></label>
                                <input asp-for="Email" class="form-control"
                                       placeholder="Enter email address"
                                       style="background-color: #2D6A4F; color: white; border: none;" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ClaimDate" class="form-label" style="color: white;"></label>
                                <input asp-for="ClaimDate" type="date" class="form-control"
                                       style="background-color: #2D6A4F; color: white; border: none;" />
                                <span asp-validation-for="ClaimDate" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="HoursWorked" class="form-label" style="color: white;"></label>
                                <input asp-for="HoursWorked" type="number" step="0.25" min="0" class="form-control"
                                       style="background-color: #2D6A4F; color: white; border: none;" />
                                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="HourlyRate" class="form-label" style="color: white;"></label>
                                <input asp-for="HourlyRate" type="number" step="0.01" min="0" class="form-control"
                                       style="background-color: #2D6A4F; color: white; border: none;" />
                                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                            </div>
                           
                        

                            <div class="col-12">
                                <label class="form-label" style="color: white;">Total Amount (R)</label>
                                <input asp-for="TotalAmount" type="text" readonly class="form-control fw-bold"
                                       style="background-color: #1F5038; color: white; border: none;" />
                            </div>

                            <div class="col-12">
                                <label asp-for="Notes" class="form-label" style="color: white;"></label>
                                <textarea asp-for="Notes" class="form-control" rows="3"
                                          placeholder="Add any notes..."
                                          style="background-color: #2D6A4F; color: white; border: none;"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="SupportingDocuments" class="form-label" style="color: white;"></label>
                                <input asp-for="SupportingDocuments" type="file" class="form-control" multiple
                                       accept=".pdf,.docx,.xlsx"
                                       style="background-color: #2D6A4F; color: white; border: none;" />
                                <span asp-validation-for="SupportingDocuments" class="text-danger"></span>
                                <div class="form-text" style="color: white;">Allowed: PDF, DOCX, XLSX (max 5 files, 5MB each)</div>
                            </div>

                            <div class="col-12 d-flex justify-content-end gap-2">
                                <button type="submit" name="action" value="CalculateTotal" class="btn" style="background-color: #1B4F3B; color: white;">
                                    Calculate Total
                                </button>
                                <button type="submit" name="action" value="SubmitClaim" class="btn" style="background-color: #1B4F3B; color: white;">
                                    Submit Claim
                                </button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
