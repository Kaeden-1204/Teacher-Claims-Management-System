@model PROG6212_Part2.Models.User

@{
    ViewData["Title"] = "Edit Teacher";
}

<h2 class="mb-4 text-white">Edit Teacher</h2>

<div class="card p-4 shadow-sm" style="max-width:600px;">
    <form asp-action="EditTeacher" asp-controller="HR" method="post">
        <input asp-for="UserId" type="hidden" />

        <div class="mb-3">
            <label asp-for="FullName" class="form-label text-white">Full Name</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label text-white">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HourlyRate" class="form-label text-white">Hourly Rate</label>
            <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="TeacherList" asp-controller="HR" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
