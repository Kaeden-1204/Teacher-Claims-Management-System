@model List<PROG6212_Part2.Models.Claim>

@{
    ViewData["Title"] = "HR - Approved Claims";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header" style="background-color: #00171F; color: white; font-weight: bold;">
                    <h3 class="mb-0">Approved Claims</h3>
                    <p class="small mb-0">
                        Below are all claims approved by the Academic Manager. You may generate invoices for payment processing.
                    </p>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        @if (Model == null || !Model.Any())
                        {
                            <div class="alert alert-info m-3">No approved claims at the moment.</div>
                        }
                        else
                        {
                            <table class="table align-middle mb-0">
                                <thead style="background-color: #e6f0ea;">
                                    <tr>
                                        <th class="text-success" style="color:black">Lecturer Name</th>
                                        <th class="text-success" style="color:black">Email</th>
                                        <th class="text-success" style="color:black">Total Amount (R)</th>
                                        <th class="text-success" style="color:black">Files</th>
                                        <th class="text-success" style="color:black">Approved By</th>
                                        <th class="text-success" style="color:black">Invoice</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model)
                                    {
                                        <tr>
                                            <td class="text-dark fw-bold">
                                                @(claim.FullName ?? claim.User?.FullName ?? "Unknown")
                                            </td>

                                            <td class="text-dark">
                                                @(claim.Email ?? claim.User?.Email ?? "Unknown")
                                            </td>


                                            <td class="text-dark">
                                                R @claim.TotalAmount.ToString("N2")
                                            </td>

                                            <td>
                                                @if (claim.Documents != null && claim.Documents.Any())
                                                {
                                                    <ul class="list-unstyled mb-0 small text-dark">
                                                        @foreach (var doc in claim.Documents)
                                                        {
                                                            <li>
                                                                <a asp-controller="PC"
                                                                   asp-action="DownloadDocument"
                                                                   asp-route-documentId="@doc.DocumentId"
                                                                   class="text-decoration-none text-success">
                                                                    @doc.FileName
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <span class="small text-muted">No files uploaded</span>
                                                }
                                            </td>

                                            <td class="text-dark">Academic Manager</td>

                                            <td>
                                                <form method="post" asp-action="GenerateInvoice" asp-route-id="@claim.ClaimId" target="_blank">
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        Generate Invoice
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
